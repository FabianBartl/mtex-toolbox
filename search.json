---
title: search
layout: none
search: exclude
---

[
	{% for page in site.pages %}
		{% unless page.search == "exclude" %}
			{
				"title"			: "{{ page.title | strip | escape }}",
				"url"			: "{{ page.url | remove: '/' }}",
				"path"			: "{{ page.url | split: '/' | join: ' > ' }}",
				"date"			: "{{ page.last_updated | replace_first: '-', '. ' | capitalize }}",
				"keywords"		: "{{ page.keywords }}",
				"content"		: "{{ page.body | strip_newlines | strip_html | strip | escape | truncate: 150 }}"
			}
			{% unless forloop.last and site.posts.size < 1 %},{% endunless %}
		{% endunless %}
	{% endfor %}
	
	{% for post in site.posts %}
		{% unless post.published == false %}
			{
				"title"			: "{{ post.title | strip | escape }}",
				"url"			: "{{ post.url | remove: '/' }}",
				"date"			: "{{ post.date | replace_first: '-', '. ' | capitalize }}",
				"tags"			: "{{ post.tags }}",
				"categories"	: "{{ post.categories }}"
			}
			{% unless forloop.last %},{% endunless %}
		{% endunless %}
	{% endfor %}
]
